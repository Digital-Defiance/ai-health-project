{
  "image": "ghcr.io/digital-defiance/ai-health-project-devcontainer:latest",
  "mounts": [
      { 
          "source": "/etc/localtime", 
          "target": "/etc/localtime",
          "type": "bind" 
      },
      { 
          "source": "${localWorkspaceFolder}/.devcontainer/resolv.conf", 
          "target": "/etc/resolv.conf",
          "type": "bind" 
      }
  ],
  "hostRequirements": {
    "gpu": "optional" 
  }
}
